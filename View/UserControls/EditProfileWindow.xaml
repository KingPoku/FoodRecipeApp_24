<Window x:Class="FoodRecipeApp_24.View.UserControls.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodRecipeApp_24.View.UserControls"
        mc:Ignorable="d"
            Title="Edit Profile" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Edit Profile" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <Label Content="Username/Email:"/>
            <TextBox x:Name="UsernameEmailTextBox" Margin="0,0,0,10"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
            <Label Content="Confirm Password:"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Save" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="100" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
